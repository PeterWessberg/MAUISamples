<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CustomControls.Views.WavyBackgroundView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:drawables="clr-namespace:CustomControls.Drawables"
    Title="Wavy Background">
    <ContentPage.Resources>
        <drawables:WaveBottomDrawable x:Key="WaveBottomDrawable" />
    </ContentPage.Resources>
    <Grid x:Name="LoginPanel" VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="250" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" />
        <GraphicsView
            Grid.Row="1"
            Drawable="{StaticResource WaveBottomDrawable}"
            VerticalOptions="EndAndExpand" />
        <Label
            Grid.Row="1"
            Margin="30"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Text="My Logo"
            TextColor="White"
            VerticalOptions="EndAndExpand" />
    </Grid>
</ContentPage>