<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GraphicsSamples.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GraphicsSamples.Views"
    Title="Menu">
    <TableView Intent="Menu">
        <TableRoot>
            <TableSection Title="Customized Controls">
                <TextCell
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{x:Type views:WavyBackgroundView}"
                    Detail="Background drawable"
                    Text="Wavy background" />
                <TextCell
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{x:Type views:RotatingCubeView}"
                    Detail="3D Animation"
                    Text="Rotating Cube" />

            </TableSection>
        </TableRoot>
    </TableView>

</ContentPage>
