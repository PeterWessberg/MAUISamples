<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="CustomizeHandlers.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CustomizeHandlers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="LightBackgroundColor">#FFFFFF</Color>
            <Color x:Key="DarkBackgroundColor">#222222</Color>
            <Color x:Key="BlackTextColor">#222222</Color>
            <Color x:Key="WhiteTextColor">#FFFFFF</Color>

        </ResourceDictionary>
    </Application.Resources>
</Application>